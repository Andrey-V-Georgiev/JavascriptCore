{{> header}}

<main>
    {{> notify}}

    <section id="viewShop">
        <h1>Products</h1>
        <div class="products" id="shopProducts">
            <table>
                <thead>
                <tr>
                    <th>Product</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>

                    {{#each shopProducts}}
                        {{> shopProduct}}
                    {{/each}}

                </tbody>
            </table>
        </div>
    </section>
</main>

{{> footer}}


