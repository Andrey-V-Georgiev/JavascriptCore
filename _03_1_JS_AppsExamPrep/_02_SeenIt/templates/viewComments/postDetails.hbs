<div class="post">
    <div class="col thumbnail">
        <a href="{{url}}">
            <img src="{{imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="{{title}}">
                Sammy Docs
            </a>
        </div>
        <div class="details">
            <p>{{description}}</p>
            <div class="info">
                submitted {{before}} ago by {{author}}
            </div>
            <div class="controls">
                {{#if isAuthor}}
                <ul>
                    <li class="action"><a class="editLink" href="#/edit/post/:{{postId}}">edit</a></li>
                    <li class="action"><a class="deleteLink" href="#/delete/post/:{{postId}}">delete</a></li>
                </ul>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>